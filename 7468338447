--⛏️ Dig to Earth's CORE!

local repo = 'https://raw.githubusercontent.com/violin-suzutsuki/LinoriaLib/main/'

local Library = loadstring(game:HttpGet(repo .. 'Library.lua'))()
local ThemeManager = loadstring(game:HttpGet(repo .. 'addons/ThemeManager.lua'))()
local SaveManager = loadstring(game:HttpGet(repo .. 'addons/SaveManager.lua'))()

local Window = Library:CreateWindow({
    Title = 'Pure | ⛏️ Dig to Earth's CORE!',
    Center = true,
    AutoShow = true,
    TabPadding = 7,
    MenuFadeTime = 0.2
})




task.wait(1)

local Tabs = {
    Main = Window:AddTab('main'),
    ['misc'] = Window:AddTab('miscellaneous'),
    ['UI Settings'] = Window:AddTab('settings'),
}

local RemoteGroup = Tabs.Main:AddLeftGroupbox('Remotes')







--//coins
RemoteGroup:AddToggle('coinsremote', {
    Text = 'Auto Coins',
    Default = false, 
    Tooltip = 'calls remotes for free coins',

    Callback = function(Value)
        runningCoins = Value

        if runningCoins then
            task.spawn(function()
                while runningCoins do
                    local ohString1 = "Cash"
                    local ohNumber2 = 9999999999999999999
                    

                    game:GetService("ReplicatedStorage").Remotes.AddRewardEvent:FireServer(ohString1, ohNumber2)

                    task.wait(0.1) 
                end
            end)
        end
    end
})


--// gems
RemoteGroup:AddToggle('gemsremote', {
    Text = 'Auto Gems',
    Default = false,
    Tooltip = 'calls remotes for free gems',
    Callback = function(Value)
        runningGems = Value

        if runningGems then
            task.spawn(function()
                while runningGems do
                    local ohNumber1 = 5
                    game:GetService("ReplicatedStorage").Remotes.SpinPrizeEvent:FireServer(ohNumber1)

                    task.wait(0.1)
                end
            end)
        end
    end
})

--// Spins
RemoteGroup:AddToggle('spinsremote', {
    Text = 'Auto Spins',
    Default = false,
    Tooltip = 'calls remotes for free Spins',
    Callback = function(Value)
        runningSpins = Value

        if runningSpins then
            task.spawn(function()
                while runningSpins do
                    local ohNumber1 = 7

                    game:GetService("ReplicatedStorage").Remotes.SpinPrizeEvent:FireServer(ohNumber1)
                    task.wait(0.1)
                end
            end)
        end
    end
})


--// pet
-- This script was generated by Hydroxide's RemoteSpy: https://github.com/Upbolt/Hydroxide



RemoteGroup:AddToggle('petsremote', {
    Text = 'Auto Dominus',
    Default = false,
    Tooltip = 'calls remotes for free Dominuses',
    Callback = function(Value)
        runningPet = Value

        if runningPet then
            task.spawn(function()
                while runningPet do
                    local ohNumber1 = 4

                    game:GetService("ReplicatedStorage").Remotes.SpinPrizeEvent:FireServer(ohNumber1)
                    task.wait(0.1)
                end
            end)
        end
    end
})

local miscGroup = Tabs.Main:AddRightGroupbox('settings')


-- gold
local GoldPet = "Triple Dominus"
local Rate4Gold = 100

miscGroup:AddToggle('goldPet', {
    Text = 'Auto Gold',
    Default = false,
    Tooltip = 'makes pets gold fast',
    Callback = function(Value)
        runningGold = Value

        if runningGold then
            task.spawn(function()
                while runningGold do
                    game:GetService("ReplicatedStorage").PetRemotes.GoldPetCraftEvent:FireServer(GoldPet, Rate4Gold)
                    task.wait(0.1)
                end
            end)
        end
    end
})





miscGroup:AddInput('PetNameForGold', {
    Default = 'Triple Dominus',
    Numeric = false, -- true / false, only allows numbers
    Finished = false, -- true / false, only calls callback when you press enter

    Text = '',
    Tooltip = 'index error', -- Information shown when you hover over the textbox

    Placeholder = 'pet to make gold', -- placeholder text when the box is empty
    -- MaxLength is also an option which is the max length of the text

    Callback = function(Value)
        GoldPet = Value
    end
})

local dropdownValues = { '20', '40', '60', '80', '100' }

miscGroup:AddDropdown('Rate4GOldPEts', {
    Values = dropdownValues,
    Default = 5,
    Multi = false, -- true / false, allows multiple choices to be selected

    Text = 'chance for Gold',
    Tooltip = 'Chance for pets when auto gold', -- Information shown when you hover over the dropdown

    Callback = function(Value)
        Rate4Gold = tonumber(Value)
    end
})


-- dia

miscGroup:AddDivider()

local DiaPet = "Gold Triple Dominus"
local Rate4Dia = 100


miscGroup:AddToggle('goldPet', {
    Text = 'Auto Gold',
    Default = false,
    Tooltip = 'makes pets gold fast',
    Callback = function(Value)
        runningGold = Value

        if runningGold then
            task.spawn(function()
                while runningGold do
                    game:GetService("ReplicatedStorage").PetRemotes.DiamondPetCraftEvent:FireServer(DiaPet, Rate4Dia)
                    task.wait(0.1)
                end
            end)
        end
    end
})





miscGroup:AddInput('PetNameForDia', {
    Default = 'Triple Dominus',
    Numeric = false, -- true / false, only allows numbers
    Finished = false, -- true / false, only calls callback when you press enter

    Text = '',
    Tooltip = 'index error', -- Information shown when you hover over the textbox

    Placeholder = 'pet to make gold', -- placeholder text when the box is empty
    -- MaxLength is also an option which is the max length of the text

    Callback = function(Value)
        DiaPet = Value
    end
})

local dropdownValues = { '20', '40', '60', '80', '100' }

miscGroup:AddDropdown('Rate4DioPEts', {
    Values = dropdownValues,
    Default = 5,
    Multi = false, -- true / false, allows multiple choices to be selected

    Text = 'chance for Gold',
    Tooltip = 'Chance for pets when auto gold', -- Information shown when you hover over the dropdown

    Callback = function(Value)
        Rate4Dia = tonumber(Value)
    end
})






local MenuGroup = Tabs['UI Settings']:AddLeftGroupbox('Menu')
MenuGroup:AddButton('Unload', function() Library:Unload() end)
MenuGroup:AddLabel('Menu bind'):AddKeyPicker('MenuKeybind', { Default = 'End', NoUI = true, Text = 'Menu keybind' })
Library.ToggleKeybind = Options.MenuKeybind
ThemeManager:SetLibrary(Library)
SaveManager:SetLibrary(Library)
SaveManager:IgnoreThemeSettings()
SaveManager:SetIgnoreIndexes({ 'MenuKeybind' })
ThemeManager:SetFolder('Pure')
SaveManager:SetFolder('Pure/7468338447')
SaveManager:BuildConfigSection(Tabs['UI Settings'])
ThemeManager:ApplyToTab(Tabs['UI Settings'])
SaveManager:LoadAutoloadConfig()
